{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "./build",
    "rootDir": ".",
    "esModuleInterop": true,
    "allowJs": true,
    "jsx": "react-jsx",
    "removeComments": true,
    "inlineSourceMap": true,
    "strict": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
  },
  "include": [
    "src/**/*"
  ]
}
