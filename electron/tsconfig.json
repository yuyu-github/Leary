{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "../build",
    "rootDir": "../",
    "esModuleInterop": true,
    "allowJs": true,
    "removeComments": true,
    "inlineSourceMap": true,
    "strict": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["./**/*"]
}
